<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiscJockeyManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="mainColor">@color/accent_purple</item>
        <item name="secondaryBackground">@color/white</item>
        <item name="mainText">@color/dim_gray</item>
        <item name="secondaryColor">@color/accent_orange</item>
        <item name="darkBackground">@color/white_smoke</item>
        <item name="alternateBackground">@color/lavender</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/secondaryBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">?attr/mainText</item>
    </style>
    <style name="SplashTheme" parent="Theme.DiscJockeyManager">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="MenuItem">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TableDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">?attr/alternateBackground</item>
    </style>
    <style name="Theme.DiscJockeyManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DiscJockeyManager.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DiscJockeyManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>