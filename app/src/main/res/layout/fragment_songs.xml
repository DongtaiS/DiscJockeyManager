<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SongsFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Songs"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/tableSongsMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableSongsMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:background="?attr/colorOnSecondary"
        android:padding="2dp"
        android:paddingTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="?attr/colorPrimaryVariant"
            android:paddingRight="5dp">

            <CheckBox
                android:id="@+id/checkBoxClientsRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="?attr/colorOnPrimary"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <View
                style="@style/TableDivider"
                android:layout_marginLeft="0dp" />

            <TextView
                android:id="@+id/textClientsRowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Song Name"
                android:textColor="?attr/colorOnPrimary" />

            <View
                style="@style/TableDivider"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textClientsRowCellNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="?attr/colorOnPrimary" />

            <View
                style="@style/TableDivider"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textClientsRowEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mix Name"
                android:textColor="?attr/colorOnPrimary" />

            <View
                android:id="@+id/view5"
                style="@style/TableDivider"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textClientsRowEmail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:textColor="?attr/colorOnPrimary" />

            <View
                android:id="@+id/view6"
                style="@style/TableDivider"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textClientsRowEmail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Label"
                android:textColor="?attr/colorOnPrimary" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>